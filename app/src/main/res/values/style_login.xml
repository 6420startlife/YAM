<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_login">
        <item name="android:text">@string/title_name</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/ascent</item>
    </style>
    <style name="input_login">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="button_login">
        <item name="android:background">@drawable/background_button_register</item>
        <item name="android:text">@string/string_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="button_register">
        <item name="android:background">@drawable/background_button_register</item>
        <item name="android:text">@string/string_register</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="text_forgot_password">
        <item name="android:text">@string/string_forgot_password</item>
        <item name="android:textColor">@color/ascent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="text_already_have_an_account">
        <item name="android:text">@string/string_already_have_an_account</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="title_register">
        <item name="android:text">@string/string_register</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
</resources>